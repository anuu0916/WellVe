<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.diary.jimin.wellve">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".util.GlobalApplication"
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".activity.UserVerificationActivity"></activity>
        <activity android:name=".activity.NicknameModifyActivity" />
        <activity android:name=".activity.ReTypeCheckActivity" />
        <activity android:name=".activity.DeveloperActivity" />
        <activity android:name=".activity.OcrActivity" />
        <activity android:name=".activity.Signup_complete_Activity" />
        <activity android:name=".activity.CameraActivity" />
        <activity android:name=".activity.BookmarkActivity" />
        <activity android:name=".activity.CommunityActivity" />
        <activity android:name=".activity.PostInActivity" />
        <activity
            android:name=".activity.PostActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activity.BoardActivity" />
        <activity android:name=".activity.PasswordResetActivity" />
        <activity android:name=".activity.TypeCheckActivity" />
        <activity android:name=".activity.SearchActivity" />
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.SignupActivity" />
        <activity android:name=".activity.InfoModifyActivity" />
        <activity android:name=".activity.SettingsActivity" />
    </application>

</manifest>