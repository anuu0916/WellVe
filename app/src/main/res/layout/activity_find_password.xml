<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="18"
    tools:context=".activity.FindPasswordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp">

        <Button
            android:id="@+id/findPwBackButton"
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:background="@drawable/backbutton" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="비밀번호 찾기"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_weight="2"
        android:gravity="bottom"
        android:text="아이디를 입력해주세요."
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:letterSpacing="-0.05"
        android:lineSpacingExtra="0sp"
        android:text="아이디"
        android:textColor="#000000"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/findPwEmailEditText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_weight="1"
        android:hint="이메일 주소 (example@gmail.com)"
        android:background="@null"
        android:gravity="center|left"
        android:letterSpacing="-0.05"
        android:lineSpacingExtra="0sp"
        android:textColorHint="#808080"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#d4d4d4" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:weightSum="22"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/tmpPwButton"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="20"
            android:background="@drawable/find_password_button"
            android:gravity="center"
            android:lineSpacingExtra="-14sp"
            android:text="임시비밀번호 보내기"
            android:textColor="#4d4d4d"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:weightSum="15"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_weight="3"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_weight="6"
            android:text="아이디가 기억나지 않는다면?"
            android:textSize="12sp"
            android:textColor="#8a8a8a"
            android:lineSpacingExtra="4sp"
            android:gravity="center_horizontal"/>

        <Button
            android:id="@+id/findIDButton"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_weight="3"
            android:text="아이디 찾기"
            android:textSize="12sp"
            android:lineSpacingExtra="4sp"
            android:textColor="#79c668"
            android:background="#00FF0000"
            android:gravity="left|center"/>
    </LinearLayout>

</LinearLayout>