<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="10"
    android:padding="10dp">

    <ImageView
        android:id="@+id/communityItemPhotoText"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:src="@drawable/app_icon"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="vertical"
        android:weightSum="10"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/communityItemCategoryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="잡담 "
                android:textSize="14sp"
                android:textColor="@color/colorSelect"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/communityItemTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저 오늘 주말농장 다녀왔어요"
                android:textSize="14sp"
                android:textColor="#000000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/communityItemNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mark Lee" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" | " />
            <TextView
                android:id="@+id/communityItemTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020.08.25" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:paddingTop="10dp"
        android:scaleType="fitStart"
        android:src="@drawable/list_comment"/>

    <TextView
        android:id="@+id/communityItemCommentText"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:text="10"
        android:textColor="#000000"
        android:textStyle="bold"
        android:paddingTop="10dp" />

</LinearLayout>