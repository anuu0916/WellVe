<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:padding="10dp">

        <ImageView
            android:id="@+id/communityItemPhotoText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/app_icon"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="vertical"
            android:weightSum="10"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/communityItemCategoryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="잡담 "
                    android:textSize="14sp"
                    android:textColor="@color/colorSelect"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/communityItemTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="저 오늘 주말농장 다녀왔어요"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:ellipsize="end"
                    android:maxLines="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/communityItemNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mark Lee"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | "
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/communityItemTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020.08.25"
                    android:textSize="12sp"/>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/communityItemCommentImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/community_comment"
                android:layout_alignBottom="@+id/communityItemCommentText"/>

            <TextView
                android:id="@+id/communityItemCommentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/communityItemCommentImage" />

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGray">

    </View>
</LinearLayout>
