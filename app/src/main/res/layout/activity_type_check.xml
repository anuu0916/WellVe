<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="52dp">

        <Button
            android:id="@+id/signupBackButton"
            android:layout_width="12dp"
            android:layout_height="16dp"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/backbutton"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginLeft="128dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp"
        android:text="개인정보를 입력해주세요."
        android:textSize="16sp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp"
        android:text="현재 하고있는 채식의 단계는?"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp">
        
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/btn_empty">

                <TextView
                    android:id="@+id/pescoButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableTop="@drawable/fish"
                    android:gravity="center"
                    android:textColor="@color/colorGray"
                    android:text="페스코" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/btn_empty">

                <TextView
                    android:id="@+id/lactoovoButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableTop="@drawable/milk"
                    android:gravity="center"
                    android:textColor="@color/colorGray"
                    android:text="락토오보" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/btn_empty">

                <TextView
                    android:id="@+id/lactoButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableTop="@drawable/milk"
                    android:gravity="center"
                    android:textColor="@color/colorGray"
                    android:text="락토" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/btn_empty">

                <TextView
                    android:id="@+id/ovoButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableTop="@drawable/eggs"
                    android:gravity="center"
                    android:textColor="@color/colorGray"
                    android:text="오보" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <RelativeLayout
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/btn_empty">

                <TextView
                    android:id="@+id/veganButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableTop="@drawable/cabbage_icon"
                    android:gravity="center"
                    android:textColor="@color/colorGray"
                    android:text="비건" />

            </RelativeLayout>

            <Button
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:background="@drawable/no_btn"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>