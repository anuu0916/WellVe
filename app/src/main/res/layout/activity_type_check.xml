<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="52dp">

        <Button
            android:id="@+id/signupBackButton"
            android:layout_width="12dp"
            android:layout_height="16dp"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/backbutton"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginLeft="128dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp"
        android:text="개인정보를 입력해주세요."
        android:textSize="16sp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp"
        android:text="현재 하고있는 채식의 단계는?"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/typePescoButton"
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:background="@drawable/type_button"
                android:drawableTop="@drawable/fish"
                android:text="페스코\n\n"
                android:textColor="@color/colorGray"
                android:padding="10dp"/>

            <Button
                android:id="@+id/typeLactoovoButton"
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:background="@drawable/type_button"
                android:drawableTop="@drawable/unselect_lactoovo"
                android:text="락토오보"
                android:textColor="@color/colorGray"
                android:padding="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/typeLactoButton"
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:background="@drawable/type_button"
                android:drawableTop="@drawable/milk"
                android:text="락토"
                android:textColor="@color/colorGray"
                android:padding="20dp" />

            <Button
                android:id="@+id/typeOvoButton"
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:background="@drawable/type_button"
                android:drawableTop="@drawable/unselect_ovo"
                android:text="오보"
                android:textColor="@color/colorGray"
                android:paddingTop="30dp"
                android:paddingBottom="10dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/typeVeganButton"
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:background="@drawable/type_button"
                android:drawableTop="@drawable/cabbage_icon"
                android:text="비건"
                android:textColor="@color/colorGray"
                android:padding="20dp" />

            <Space
                android:layout_width="160dp"
                android:layout_height="100dp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/typeSignUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/type_button"
        android:drawableRight="@drawable/button_no_arrow"
        android:text="가입완료하기"
        android:textColor="@color/colorGray"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

</LinearLayout>