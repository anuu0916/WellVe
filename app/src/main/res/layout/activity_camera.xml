<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/CameraSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/CameraShowText"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:text="원재료명을 보여주세요"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_above="@id/CameraBoarder"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="@drawable/shadow"/>

    <ImageView
        android:id="@+id/CameraBoarder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/camera_boarder"
        android:layout_centerInParent="true"/>

    <ImageButton
        android:id="@+id/CameraGalleryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/camera_gallery_image"
        android:layout_alignParentBottom="true"
        android:width="36dp"
        android:height="27dp"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="60dp"/>

    <ImageButton
        android:id="@+id/CameraShootButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/camera_shooting_image"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"/>


</RelativeLayout>