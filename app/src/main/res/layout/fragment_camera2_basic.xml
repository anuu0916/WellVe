<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.diary.jimin.wellve.view.AutoFitTextureView
        android:id="@+id/texture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>


    <ImageView
        android:id="@+id/camera2_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ImageButton
        android:id="@+id/camera_backbutton"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:background="@drawable/ocr_close"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="24dp"/>

    <ImageButton
        android:id="@+id/cameraGalleryButton"
        android:layout_width="42dp"
        android:layout_height="36dp"
        android:background="@drawable/camera_gallery_image"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="40dp"
        />

    <FrameLayout
        android:id="@+id/control"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">


        <ImageButton
            android:id="@+id/cameraShootButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/camera_shooting_image"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="44dp"/>



    </FrameLayout>

</RelativeLayout>
