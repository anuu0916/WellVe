<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp">

        <Button
            android:id="@+id/loginBackButton"
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:background="@drawable/backbutton" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="글쓰기"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/postButton"
            android:layout_width="38dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/post_button"
            android:gravity="center"
            android:lineSpacingExtra="8sp"
            android:text="등록"
            android:textColor="#000000"
            android:textSize="12sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginTop="14dp"
        android:background="#d4d4d4" />

    <Spinner
        android:id="@+id/postSpinner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:paddingLeft="24dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#d4d4d4" />

    <EditText
        android:id="@+id/postTitleEditText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="@null"
        android:hint="제목"
        android:paddingLeft="24dp"
        android:singleLine="true"
        android:textColorHint="#d4d4d4"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginBottom="10dp"
        android:background="#d4d4d4" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp"/>

            <EditText
                android:id="@+id/postTextEditText"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:background="@null"
                android:gravity="top"
                android:hint="내용"
                android:inputType="textMultiLine"
                android:minLines="2"
                android:paddingLeft="24dp"
                android:layout_marginTop="1dp"
                android:scrollbars="vertical"
                android:textColorHint="#d4d4d4"
                android:textSize="16sp"
                />


        </LinearLayout>


    </ScrollView>


    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#d4d4d4" />

    <ImageButton
        android:id="@+id/postPhotoButton"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:background="#00FF0000"
        android:src="@drawable/post_gallery_btn" />

</LinearLayout>

