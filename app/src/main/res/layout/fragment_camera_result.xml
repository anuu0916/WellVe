<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relayout"
    android:animateLayoutChanges="true">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.diary.jimin.wellve.view.AutoFitTextureView
        android:id="@+id/texture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="16dp"/>



    <FrameLayout
        android:id="@+id/control"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="16dp"
        android:layout_gravity="bottom"
        android:animateLayoutChanges="true">


        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:background="@drawable/shadow"
            android:layout_gravity="center_vertical">
        </ImageButton>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ocr_slide"
                    android:layout_marginRight="8dp"/>
                <Button
                    android:id="@+id/btn_slide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="위로 올려 상세정보 확인하기"
                    android:textColor="#000000"
                    android:textSize="13sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이 제품은 회원님이"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:layout_marginRight="4dp"
                    />
                <TextView
                    android:id="@+id/isVeganResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="먹을 수 있는 제품"
                    android:textColor="#79c668"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginRight="4dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="입니다!"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:layout_marginRight="4dp"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="4dp">
                <TextView
                    android:id="@+id/veganTypeResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="섭취 가능 : 페스코, 락토오보"
                    android:textSize="11sp"
                    android:textColor="#575757"/>
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/detailPage"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/ocr_fragment_back"
        android:visibility="visible">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="52dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="확인하기"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="24dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="식품유형"
                android:textSize="14sp"
                android:layout_gravity="left"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginRight="12dp"/>
            <TextView
                android:id="@+id/detailFoodType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="곡류가공품"
                android:textSize="14sp"
                android:layout_gravity="left"
                android:textColor="#000000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:layout_marginHorizontal="24dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원재료명"
                android:textSize="14sp"
                android:layout_gravity="left"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginRight="12dp"/>

            <TextView
                android:id="@+id/detailResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="쿠키크런치(벨기에산 : 바닐라필링, 밀가루, 쌀그릿츠, 기타 코코아가공품, 설탕), 혼합제제(d-토코페롤(혼합형), 글리세린, 글리세린지방산에스테르), 밀, 우유, 대두 함유"
                android:textColor="#000000"
                android:textSize="14sp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ocr_caution"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="잠깐만!"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기타 코코아가공품, 바닐라필링, 쌀그릿츠"
            android:textSize="13sp"
            android:layout_marginBottom="5dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이 성분은 제조사의 확인이 필요해요."
            android:textSize="11sp"
            android:layout_marginBottom="24dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D4D4D4"
            android:layout_marginBottom="12dp"
            android:layout_marginHorizontal="24dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="먹을 수 있는 채식주의자"
            android:textSize="16sp"
            android:textColor="#79c668"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:layout_marginHorizontal="24dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d4d4d4"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="24dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="24dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/result_pesco_yes"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="페스코"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d4d4d4"
            android:layout_marginHorizontal="24dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="24dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/result_lactoovo_yes"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="락토오보"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d4d4d4"
            android:layout_marginHorizontal="24dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="24dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/result_ovo_no"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오보"
                android:textColor="#d4d4d4"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="불가능 성분 : 계란"
                android:textColor="#d41717"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d4d4d4"
            android:layout_marginHorizontal="24dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="24dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/result_lacto_no"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="락토"
                android:layout_marginRight="8dp"
                android:textColor="#d4d4d4"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="불가능 성분 : 우유"
                android:textColor="#d41717"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d4d4d4"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="24dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/result_vegan_no"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비건"
                android:textColor="#d4d4d4"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="불가능 성분 : 계란, 우유"
                android:textColor="#d41717"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d4d4d4"
            android:layout_marginHorizontal="24dp"
            />

</LinearLayout>
    </FrameLayout>

    <!--숨겨둔 페이지 끝 (슬라이드)-->
</FrameLayout>
</FrameLayout>
