<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".activity.MainActivity">

    <ImageView
        android:id="@+id/mainTopLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/main_toplogo"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="16dp"
        android:text="블라블라블라 무슨 칼럼같은 글이 좋을듯?"
        android:textColor="#ffffff"
        android:textSize="28sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:text="채식과 관련된 어쩌구...저쩌구... 잡다한 어쩌구... 하놔 그런걸로 나타났다...."
        android:textColor="#ffffff"
        android:textSize="16sp"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/main_bottombackground">

        <Button
            android:id="@+id/mainCameraButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableStart="@drawable/main_ocr"
            android:drawablePadding="16dp"
            android:text="바로 채식제품인지 확인하기"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="#00ff0000"/>

        <LinearLayout
            android:id="@+id/MainBottomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/main_buttonbackground"
            android:weightSum="100">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="14"/>

            <ImageButton
                android:id="@+id/mainBookMarkButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/mypage_btn"
                android:layout_weight="20"
                android:background="@color/transparent"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"/>

            <ImageButton
                android:id="@+id/mainBoardButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/community_btn"
                android:layout_weight="20"
                android:background="@color/transparent"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"/>

            <ImageButton
                android:id="@+id/mainSettingButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/setting_btn"
                android:layout_weight="20"
                android:background="@color/transparent"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="14"/>

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>